<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>New Question</h1>
    </div>
    <div class="col-md-12">
      <%= form_for @question do |q| %>
        <div class="form-group">
          <%= q.label :title %>
          <%= q.text_field :title, class: 'form-control', placeholder: 'Enter A Short Title for Your Question' %>
        </div>
        <div class="form-group">
          <%= q.label :body %>
          <%= q.text_field :body, rows: 8, class: 'form-control', placeholder: 'Question text goes here' %>
        </div>
        <div class="form-group">
          <%= q.label :resolved %>
          <%= q.check_box :resolved, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= q.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div><%= link_to 'Back', questions_path, class: 'btn btn-info' %></div>
