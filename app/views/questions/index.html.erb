<div class="container">
  <div class="row">
    <div class="col-md-4 col-xs-6">
      <h1>All Questions</h1>
    </div>
    <div class="col-md-8 col-xs-6">
      <h1><%= link_to "New Question", new_question_path, class: 'btn btn-success'%></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% @questions.each do |question| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to "#{question.id}. #{question.title}", question %>
          </h4>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
