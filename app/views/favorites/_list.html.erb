<div class="media">
  <%= render partial: 'votes/voter', locals: { post: favorite.post } %>
  <% avatar_url = favorite.post.user.avatar_url(64) %>
  <% if avatar_url %>
    <div class="media-left">
     <%= image_tag avatar_url, class: 'media-object' %>
    </div>
  <% end %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post) %>
      <%= render partial: "labels/list", locals: { labels: favorite.post.labels } %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(favorite.post.created_at) %> ago by <%= favorite.post.user.name %> <br>
      <%= favorite.post.comments.count %> Comments
    </small>
  </div>
</div>
