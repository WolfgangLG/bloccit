<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Sign Up Confirmation</h2>
      <h3>Please confirm your user information</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p>Name: <%= @user.name %></p>
      <p>Email: <%= @user.email %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-md-1">
      <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    </div>
    <div class="col-xs-2 col-md-1">
      <%= button_to "No", new_user_path, method: :get, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
