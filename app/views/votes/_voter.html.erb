<% if current_user %>
<div class="vote-arrows pull-left">
  <div class="up-voted"><%= link_to " ", post_up_vote_path(post), class: 'glyphicon glyphicon-chevron-up', method: :post, remote: true %></div>
  <div class="votes_points"><strong><%= post.points %></strong></div>
  <div class="down-voted"><%= link_to " ", post_down_vote_path(post), class: 'glyphicon glyphicon-chevron-down', method: :post, remote: true %></div>
</div>
<% end %>
