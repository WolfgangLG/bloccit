<div class="container">
  <h1>New Advertisement</h1>
  <div class="row">
    <div class="col-md-12">
    <%= form_for @advertisement do |ad| %>
      <div class="form-group">
        <%= ad.label :title %>
        <%= ad.text_field :title, class: 'form-control', placeholder: "Enter Advertisement Title"%>
      </div>
      <div class="form-group">
        <%= ad.label :body %>
        <%= ad.text_field :body, rows: 12, class: 'form-control', placeholder: "Enter Advertisement Body" %>
      </div>
      <div class="form-group">
        <%= ad.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
